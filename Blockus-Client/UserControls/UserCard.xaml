<UserControl x:Class="Blockus_Client.UserControls.UserCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blockus_Client.UserControls"
             xmlns:p="clr-namespace:Blockus_Client.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150" Margin="10" Width="150" Height="150">
    <Grid>
        <Image x:Name="Image_UserProfileImage" Source="/Resources/Images/ProfileImage-0.png" Stretch="Fill" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <Border BorderBrush="{StaticResource PrimaryColor}" BorderThickness="1" CornerRadius="5" Background="#80000000"/>
        <TextBlock x:Name="txt_Username" Text="PLACEHOLDER" Style="{StaticResource Normal_Text}"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        <Button x:Name="btn_Add" Content="{x:Static p:Resources.UserCard}" VerticalAlignment="Bottom"  Click="AddNewFriend" Style="{StaticResource Normal_Button}" Grid.Column="2"/>
    </Grid>
</UserControl>
