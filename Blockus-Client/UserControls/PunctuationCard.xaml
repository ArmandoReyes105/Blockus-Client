<UserControl x:Class="Blockus_Client.UserControls.PunctuationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blockus_Client.UserControls"
             mc:Ignorable="d" 
             Height="45" d:DesignWidth="300" Margin="0 10">
    <Grid>
        <Border CornerRadius="5">
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                    <GradientStop Color="#01000000" Offset="0"/>
                    <GradientStop x:Name="GradientStop_PlayerColor" Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock x:Name="Txt_Username" Text="Username" Style="{StaticResource Subtitle_Text}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="Puntos: " Style="{StaticResource Normal_Text}" VerticalAlignment="Center"/>
            <TextBlock x:Name="Txt_Points" Text="56" Style="{StaticResource Normal_Text}" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
