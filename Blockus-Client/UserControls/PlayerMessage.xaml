<UserControl x:Class="Blockus_Client.UserControls.PlayerMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blockus_Client.UserControls"
             mc:Ignorable="d" 
             d:DesignWidth="250" MaxWidth="250" Margin="0 0 0 10">
    <Grid>
        <Border Background="{StaticResource BackgroundColor}" BorderBrush="{StaticResource PrimaryColor}" BorderThickness="1" CornerRadius="20 20 20 0"/>
        <StackPanel VerticalAlignment="Center" Margin="10 10">
            <TextBlock x:Name="Txt_Username" Text="Username" Style="{StaticResource Normal_Text}" FontSize="12" />
            <TextBlock x:Name="Txt_Message" Text="Message" Style="{StaticResource Normal_Text}" FontSize="10" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
